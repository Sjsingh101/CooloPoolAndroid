<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.LoginActivity"
    android:background="@drawable/background">


    <!-- Uncomment if it required -->
    <!--<ImageButton
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_left_arrow"/>-->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:gravity="start"
        android:fontFamily="@font/glacial_indifference_bold"
        android:layout_marginStart="40dp"
        android:text="Log In"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="40sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/login_name"
        android:singleLine="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:drawableStart="@drawable/ic_profile"
        android:drawablePadding="18dp"
        android:hint="@string/UserName"
        android:fontFamily="@font/glacial_indifference_regular"
        android:backgroundTint="@color/GrayGoose"
        android:padding="15dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="20sp"
        />

    <EditText
        android:id="@+id/login_pass"
        android:singleLine="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="40dp"
        android:backgroundTint="@color/GrayGoose"
        android:layout_marginTop="20dp"
        android:drawableStart="@drawable/ic_lock"
        android:drawablePadding="18dp"
        android:hint="@string/Password"
        android:fontFamily="@font/glacial_indifference_regular"
        android:inputType="textPassword"
        android:padding="15dp"
        android:layout_marginLeft="40dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="20sp" />


    <android.support.v7.widget.AppCompatButton
        android:id="@+id/login_btn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="150dp"
        android:elevation="4dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/circlebackground_white"
        android:text="Log In"
        android:fontFamily="@font/glacial_indifference_regular"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:textColor="@android:color/black" />


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">

        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New User?"
            android:fontFamily="@font/glacial_indifference_regular"
            android:padding="8dp"
            android:textAllCaps="false"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/SignUp_btn"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SignUp"
            android:fontFamily="@font/glacial_indifference_regular"
            android:padding="8dp"
            android:textAllCaps="false"
            android:textColor="@android:color/darker_gray" />
    </LinearLayout>


</LinearLayout>